<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} (%F:%L) [%M] [requestId:
                %X{requestId:-}] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Logstash TCP Appender -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${LOGSTASH_HOST:-logstash}:${LOGSTASH_PORT:-5000}</destination>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <version/>
                <message/>
                <loggerName/>
                <threadName/>
                <logLevel/>
                <stackTrace/>
                <callerData/>
                <context/>
                <mdc/>
                <pattern>
                    <pattern>
                        {
                        "location": "%logger{36} (%F:%L)",
                        "application": "mait",
                        "environment": "prod"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
        <connectionTimeout>5000</connectionTimeout>
        <reconnectionDelay>1000</reconnectionDelay>
        <writeBufferSize>16384</writeBufferSize>
    </appender>

    <!-- Async Logstash Appender for better performance -->
    <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOGSTASH"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <maxFlushTime>5000</maxFlushTime>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- Production Root Level: INFO -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_LOGSTASH"/>
    </root>

    <!-- Production Logger Settings -->
    <!-- 애플리케이션 로그 레벨 INFO로 상향 -->
    <logger name="com.coniv.mait" level="INFO"/>

    <!-- [변경] 일반 SQL 로그: ES로 보내지 않고 콘솔에만 출력 (운영 환경 성능 주의) -->
    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- [변경] SQL 파라미터 로그: ES로 보내지 않고 콘솔에만 출력 -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 잡음이 많은 패키지들 제한 -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
</configuration>
